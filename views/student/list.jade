		main#main.main
			.pagetitle
				h1 Daftar Mahasiswa
				nav
					ol.breadcrumb
						li.breadcrumb-item
							a(href='#') Dashboard
			// End Page Title
			section.section
				.row
					.col-lg-12
						.card
							.card-body
								.box
									.box-body
										h5.card-title Daftar Mahasiswa
										- if (messages.msg_error)
											.alert.alert-danger.bg-danger.text-light.border-0.alert-dismissible.fade.show(role='alert')
												button.btn-close.btn-close-white(type='button' data-bs-dismiss='alert' aria-label='Close')
												h4
													i.icon.fa.fa-ban
													| Alert!
												| !{messages.msg_error}
										- if (messages.msg_info)
											.alert.alert-success.bg-success.text-light.border-0.alert-dismissible.fade.show(role='alert')
												button.btn-close.btn-close-white(type='button' data-bs-dismiss='alert' aria-label='Close')
												h4
													i.icon.fa.fa-ban
													| Success!
												| !{messages.msg_info}
										a(href='/students/add').pull-left.btn.btn-primary(style='margin-bottom:10px;')
											i.fa.fa-plus
											|  Tambahkan Mahasiswa
										// Table with stripped rows
										.data-table
											table.table.datatable(style="font-size: 13px !important")
												thead
													tr
														th(scope='col') No
														th(scope='col') Foto
														th(scope='col') Nama
														th(scope='col') NIM
														th(scope='col') TTL
														th(scope='col') Alamat
														th(scope='col') Fakultas
														th(scope='col') TM
														th(scope='col') Action
												tbody
													if messages.msg_error
														| !{messages.msg_error}
													else
														for row, index in data 
															tr
																td(scope='row') #{index+1}
																td 
																	if row.gambar
																		img( src="/images/upload/#{row.gambar}" height=100 width=100).img-circle
																	else
																		img( src="/images/upload/no image.jpg" height=100 width=100).img-circle
																td #{row.nama}
																td #{row.nim}
																td #{row.ttl}
																td #{row.alamat}
																td #{row.fakultas}
																td #{row.tahun_masuk}
																td
																	div(style='display:inline-block')
																		a(href='/students/edit/#{row.id}').btn.btn-sm.btn-primary
																			i.ri.ri-edit-circle-fill
																	| 
																	div(style='display:inline-block')
																		form(method='post' action='/students/delete/#{row.id}')
																			input(type="hidden" name="_method" value="DELETE")
																			button.btn.btn-sm.btn-danger(type='submit')
																				i.ri.ri-delete-bin-2-fill
								// End Table with stripped rows
