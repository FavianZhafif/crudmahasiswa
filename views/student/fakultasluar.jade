									| Fakultas
								th
									| Tahun Masuk
								if messages.msg_error
									| !{messages.msg_error}
								else
									for row, index in data 
										tr
											td #{index+1}
											td 
												if row.gambar
													img( src="/images/upload/#{row.gambar}" height=100 width=100).img-circle
												else
													img( src="/images/upload/no image.jpg" height=100 width=100).img-circle
											td #{row.nama}
											td #{row.nim}
											td #{row.ttl}
											td #{row.alamat}
											td #{row.fakultas}
											td #{row.tahun_masuk}
