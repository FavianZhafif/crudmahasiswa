doctype html
html
	head
		title
			| #{title}
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
		link(rel='stylesheet', href='/adminlte/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/font-awesome/css/font-awesome.css')
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css')
		link(rel='stylesheet', href='/adminlte/dist/css/AdminLTE.min.css')
		link(rel='stylesheet', href='/adminlte/plugins/iCheck/square/blue.css')
	body.hold-transition.login-page(style="background: url('/adminlte/dist/img/back.png');-webkit-background-size: 100% 100%; -moz-background-size: 100% 100%; -o-background-size: 100% 100%; background-size: 100% 100%; background-attachment:fixed;")
		.row.col-md-12
			.form.row.col-md-10(style= "margin-bottom: 3%; margin-top: 3%; margin-left: 9%; margin-right: 9%;")
				.login-logo
					a(href='#')
						b(style="color: #ffffff;-webkit-text-stroke: 0.03em #15395B; font-size: 50px;")
							| Universitas Gadjah Mada
				.div
					- if (messages.msg_error) 
						.alert.alert-danger.alert-dismissable 
							button.close(type='button', data-dismiss='alert', aria-hidden='true') 
								| Ã—
							h4
								i.icon.fa.fa-ban
								| Alert! 
							| !{messages.msg_error}
					.login-box-body.col-md-7(style="background-color: #ffffff20; backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); padding-left: 4%; padding-right: 4%; padding-bottom: 7%; padding-top: 5.5%; border: 1px solid lightgrey;")
						p.login-box-msg(style="color: #15395B; font-size: 30px; margin-bottom: 15px; font-weight: bold;")
							| Create a New Account
						form(action="/register",method="post")
							.form-floating.has-feedback
								input(type="email",placeholder="Email",name="email" style="font-size: 17px; font-weight: 500; border-radius: 8px; padding-bottom: 20px; padding-top: 20px; margin-bottom: 10px").form-control
								span.glyphicon.glyphicon-envelope.form-control-feedback(style="padding-bottom: 4px; padding-top: 4px;")
							.form-floating.has-feedback
								input(type="name",placeholder="Name",name="nama" style="font-size: 17px; font-weight: 500; border-radius: 8px; padding-bottom: 20px; padding-top: 20px; margin-bottom: 10px").form-control
								span.glyphicon.glyphicon-user.form-control-feedback(style="padding-bottom: 4px; padding-top: 4px;")
							.form-floating.has-feedback
								input(type="phone",placeholder="Phone",name="phone" style="font-size: 17px; font-weight: 500; border-radius: 8px; padding-bottom: 20px; padding-top: 20px; margin-bottom: 10px").form-control
								span.glyphicon.glyphicon-phone.form-control-feedback(style="padding-bottom: 4px; padding-top: 4px;")
							.form-floating.has-feedback
								input(type="password",placeholder="Password",name="password" style="font-size: 17px; font-weight: 500; border-radius: 8px; padding-bottom: 20px; padding-top: 20px; margin-bottom: 10px").form-control
								span.glyphicon.glyphicon-lock.form-control-feedback(style="padding-bottom: 4px; padding-top: 4px;")
							.row
								.col-xs-7
									.social-auth-links.text-center
									label(style="color: #ffffff; margin-bottom: 6px;")
										| Already have account?
									a(href='/login' style="font-size: 15px;").text-center
										| Sign In
								.col-xs-5
									button(type="submit" style="font-size: 15px; color: #fff; border-radius: 5px; background-color: #15395B").btn.btn-block.btn-flat
										| Register
					.div.col-md-5(style="background: url('/adminlte/dist/img/ugm.jpg');-webkit-background-size: 100% 100%; -moz-background-size: 100% 100%; -o-background-size: 100% 100%; background-size: 100% 100%;  height: 460px;  border: 1px solid lightgrey;")

script(type='text/javascript', src='/adminlte/plugins/jQuery/jquery-2.2.3.min.js')
script(type='text/javascript', src='/adminlte/bootstrap/js/bootstrap.min.js')
script(type='text/javascript', src='/adminlte/plugins/iCheck/icheck.min.js')
script(type='text/javascript', src='/adminlte/dist/js/login.js')
